{
  "parser"  : "babel-eslint",
  "extends" : [
    "eslint:recommended",
    "standard",
    "standard-react"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "indent": [2, 2],
    "no-console": 0,
    "no-const-assign": 2,
    "no-debugger": 0,
    "no-unused-vars": [2, {"args": "none"}],
    "no-var": 2,
    "object-shorthand": 2,
    "prop-types": "ignore",
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-template": 2,
    "quotes": [2, "single", "avoid-escape"],
    "react/self-closing-comp": 2,
    "semi": [2, "never"],
    "space-before-function-paren": 0,
    "strict": [2, "global"]
  }
}
